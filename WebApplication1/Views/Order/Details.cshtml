

@{
    ViewData["Title"] = "Details";
}


<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js" integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N" crossorigin="anonymous"></script>
<div class="container">
    @Html.Partial("~/Views/Header/Header.cshtml")
    <h1>Chi tiết hóa đơn</h1>
    <hr />
    <table class="table" style="width:100%">
        <tr>
            <td>Mã Đơn hàng</td>
            <td>Kiểu đơn hàng</td>
            <td>Ngày tạo hóa đơn</td>
            <td>NGười tạo</td>
            <td>Tên sản phẩm</td>
            <td>Số Lượng</td>
            <td>Giá cả</td>
        </tr>
        @foreach (var o in ViewBag.OrderD)
        {
            <tr>
                <td>@o.OrderID</td>
                <td>@(o.OrderType.Trim() == "import" ? "nhập kho" : "xuất kho")</td>
                <td>@o.OrderDate?.ToString("dd/MM/yyyy")</td>
                <td>@o.OrderBy</td>
                <td>@o.ProductName</td>
                <td>@o.Quantiy</td>
                <td>@o.Price</td>
            </tr>
            
        }
    </table>
    <div>
        <a asp-action="Index">Trở lại danh sách hóa đơn</a>
    </div>
</div>


