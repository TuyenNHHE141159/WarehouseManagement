@model IEnumerable<ProductManagement.Models.Bill>

@{
    ViewData["Title"] = "Index";

}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                BillId
            </th>
            <th>
                CustomerId
            </th>
            <th>
                BillType
            </th>
            
            <th>
                CreatedDate
            </th>        
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BillId)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.CustomerId)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.BillType)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BillId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BillId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BillId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
